    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <ImageButton
                android:gravity="right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_50"
                android:id="@+id/ic_baseline_arrow_back_50" android:onClick="irMain"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="@string/consultar_ofertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/consultar_ofertas"/>
    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat" android:id="@+id/tableLayout"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" tools:ignore="UnknownIdInLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/informacion_buscada"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/datos_personales" android:layout_weight="2"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/razon_social"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/razon_social" android:layout_weight="1"/>
            <TextView
                    android:text="@string/razon_social"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_razon_social"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/cargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/cargo" android:layout_weight="1"/>
            <TextView
                    android:text="@string/cargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_cargo"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/tipo_cargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tipo_cargo" android:layout_weight="1"/>
            <TextView
                    android:text="@string/tipo_cargo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_tipo_cargo"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/area_conocimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/area_conocimiento" android:layout_weight="1"/>
            <TextView
                    android:text="@string/area_conocimiento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_area_conocimiento"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/sector_empresarial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/sector_empresarial" android:layout_weight="1"/>
            <TextView
                    android:text="@string/sector_empresarial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_sector_empresarial"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/salario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/salario" android:layout_weight="1"/>
            <TextView
                    android:text="@string/salario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_salario"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/jornada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/jornada" android:layout_weight="1"/>
            <TextView
                    android:text="@string/jornada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_jornada"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/requisitos_academicos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/requisitos_academicos" android:layout_weight="1"/>
            <TextView
                    android:text="@string/requisitos_academicos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_requisitos_academicos"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/experiencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/experiencia" android:layout_weight="1"/>
            <TextView
                    android:text="@string/experiencia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_experiencia"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/ubicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/ubicacion" android:layout_weight="1"/>
            <TextView
                    android:text="@string/ubicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_ubicacion"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/fecha_inicio_convocatoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/fecha_inicio_convocatoria" android:layout_weight="1"/>
            <TextView
                    android:text="@string/fecha_inicio_convocatoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_fecha_inicio_convocatoria"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/fecha_fin_convocatoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/fecha_fin_convocatoria" android:layout_weight="1"/>
            <TextView
                    android:text="@string/fecha_fin_convocatoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/txt_fecha_fin_convocatoria"
                    android:layout_weight="1"/>
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

