<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal"
                tools:context=".ui.employe.DatosOfertasLaborales">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ID" />

                <TextView
                        android:id="@+id/view_id_labore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Cargo:" />

                <TextView
                        android:id="@+id/view_cargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Descripcion:" />

                <TextView
                        android:id="@+id/view_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="A Conocimiento:" />

                <TextView
                        android:id="@+id/view_areaConocimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Salario:" />

                <TextView
                        android:id="@+id/view_salario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Jornada:" />

                <TextView
                        android:id="@+id/view_jornada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Requisitos:" />

                <TextView
                        android:id="@+id/view_requisitos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Experiencia" />

                <TextView
                        android:id="@+id/view_experiencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Ubicacion" />

                <TextView
                        android:id="@+id/view_ubicaci"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha Inicio:" />

                <TextView
                        android:id="@+id/view_fechaInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha Fin:" />

                <TextView
                        android:id="@+id/view_fechafin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Empresa:" />

                <TextView
                        android:id="@+id/view_empresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Ciudad:" />

                <TextView
                        android:id="@+id/view_ciudad_laborales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/botonAplicar"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:enabled="true"
                        android:text="Aplicar"
                        android:textColor="@color/material_on_background_emphasis_high_type"
                        app:strokeColor="@color/material_on_background_emphasis_high_type"
                        app:strokeWidth="2dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>