<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.employe.InicioCV">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout6">
        <ImageButton
                android:gravity="right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_50"
                android:id="@+id/btn_regresar_pefil_empresa"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
        >

            <TextView
                    android:text="@string/perfil_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/curriculum_vitae"
            />

        </LinearLayout>
    </LinearLayout>


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="4dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_gravity="center">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="146dp" tools:srcCompat="@android:drawable/ic_input_get"
                    android:id="@+id/imgEmpresa" android:layout_weight="2"
                    app:srcCompat="@android:drawable/ic_input_get"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="ID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/txt_id" android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/view_ID"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="NOMBRE COMPLETO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/nombres_apellidos" android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/view_nombres_empresa"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="RUC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/fecha_nacimiento" android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_ruc"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="CIUDAD"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/txt_ciudad" android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/view_ciudad"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="DEPARTAMENTO"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/txt_departamento" android:layout_weight="1"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/view_departamento"
                    android:layout_weight="1"/>
        </TableRow>


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="TIPO EMPRESA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/cedula_ciudadania" android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_tipo_empresa"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="DIRECCION"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/direccion" android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_direccion" android:layout_weight="1"/>
        </TableRow>


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="SECTOR EMPRESA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/telefono" android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_sector_empresa"
                    android:layout_weight="1"/>
        </TableRow>

        <!--
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView
                            android:text="ACT ECONOMICA"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/logros_nombres" android:layout_weight="1"/>
                    <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/view_act_economico"
                            android:layout_weight="1"/>
                </TableRow>
        -->

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="RAZON SOCIAL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/experencia_laboral_nombre"
                    android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_razon_social"
                    android:layout_weight="1"/>
        </TableRow>


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="CORREO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/referencias_personales_nombre"
                    android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_correo_empresa"
                    android:layout_weight="1"/>
        </TableRow>


        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="NUMERO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/capacitaciones_nombre"
                    android:layout_weight="1"/>
            <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/view_telefono_empresa"
                    android:layout_weight="1"/>
        </TableRow>


    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout">
        <Button
                android:text="ACTIVAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_activar"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>
        <Button
                android:text="DESACTIVAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:id="@+id/btn_desactivar"
                android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>