<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f"
            android:layout_margin="10dp">


        <LinearLayout
                android:id="@+id/linearlayaut"
                android:layout_width="200dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:id="@+id/txt_ruc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RUC"
                    android:textSize="24dp"/>
            <TextView
                    android:id="@+id/txt_nombre_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="24dp"/>
            <TextView
                    android:id="@+id/txt_direccion_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direccion"
                    android:textSize="24dp"/>
            <TextView
                    android:id="@+id/txt_sector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sector empresa"
                    android:textSize="24dp"/>
            <TextView
                    android:id="@+id/txt_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo epresa"
                    android:textSize="24dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_gravity="center">
                <Button
                        android:id="@+id/btn_ver_mas"
                        android:text="Ver Mas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
                android:id="@+id/img_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/black"
        />
    </LinearLayout>

</RelativeLayout>
