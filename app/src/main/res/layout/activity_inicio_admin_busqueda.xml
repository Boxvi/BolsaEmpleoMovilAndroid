<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.admin.InicioAdminBusqueda">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"

    >

        <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btn_consultas_curriculum"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="30dp"
                    android:onClick="goConsultarCurriculum"
                    android:text="@string/consultas_curriculum"
                    android:textColor="@color/material_on_background_emphasis_high_type"
                    app:icon="@drawable/ic_baseline_library_books_120"
                    app:iconTint="@color/material_on_background_emphasis_high_type"
                    app:strokeColor="@color/material_on_background_emphasis_high_type"
                    app:strokeWidth="2dp"/>


            <Button
                    android:id="@+id/btn_perfil_empresa"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="30dp"
                    android:onClick="goPerfilEmpresa"
                    android:text="@string/perfil_empresa"
                    android:textColor="@color/material_on_background_emphasis_high_type"
                    app:icon="@drawable/ic_baseline_house_120"
                    app:iconTint="@color/material_on_background_emphasis_high_type"
                    app:strokeColor="@color/material_on_background_emphasis_high_type"
                    app:strokeWidth="2dp"/>


            <Button
                    android:id="@+id/btn_razon_social_mayus"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="30dp"
                    android:onClick="goRazonSocial"
                    android:text="@string/razon_social_mayus"
                    android:textColor="@color/material_on_background_emphasis_high_type"
                    app:icon="@drawable/ic_baseline_email_120"
                    app:iconTint="@color/material_on_background_emphasis_high_type"
                    app:strokeColor="@color/material_on_background_emphasis_high_type"
                    app:strokeWidth="2dp"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout3"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:text="@string/consultas_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtconsultar_oferta"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>