<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.employe.InicioBuscoEmpleo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout3"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:text="@string/busco_empleo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_nombre_estudiante" android:layout_weight="1"/>
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_id_estudiante" android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:id="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="25dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/btn_curriculum_vitae"
                    android:drawableLeft="@drawable/ic_baseline_library_books_120"
                    android:text="@string/curriculum_vitae"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#000"
                    android:textColor="@color/black" android:onClick="goCurriculumVitae"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="25dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/btn_ofertas_laborales"
                    android:drawableLeft="@drawable/ic_baseline_email_120"
                    android:text="@string/ofertas_laborales"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#000"
                    android:textColor="@color/black" android:onClick="goOfertasLaborales"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="25dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/btn_ofertas_aplicadas"
                    android:drawableLeft="@drawable/ic_baseline_access_time_120"
                    android:text="@string/ofertas_aplicadas"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#000"
                    android:textColor="@color/black" android:onClick="goOfertasAplicadas"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>