<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.employe.InicioBuscoEmpleo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout3"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:text="@string/busco_empleo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_on_background_emphasis_high_type"
        />
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/view_nombre_estudiante" android:layout_weight="1"
                android:textColor="@color/material_on_background_emphasis_high_type"/>
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_id_estudiante" android:layout_weight="1"
                android:textColor="@color/material_on_background_emphasis_high_type"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:id="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/btn_curriculum_vitae"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:text="@string/curriculum_vitae"
                app:icon="@drawable/ic_baseline_library_books_120"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeWidth="2dp"
                app:strokeColor="@color/material_on_background_emphasis_high_type"
                android:textColor="@color/material_on_background_emphasis_high_type"
                app:iconTint="@color/material_on_background_emphasis_high_type"
                android:onClick="goCurriculumVitae"/>

        <Button
                android:id="@+id/btn_ofertas_laborales"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:text="@string/ofertas_laborales"
                app:icon="@drawable/ic_baseline_email_120"
                style="?attr/materialButtonOutlinedStyle"
                app:strokeWidth="2dp"
                app:strokeColor="@color/material_on_background_emphasis_high_type"
                android:textColor="@color/material_on_background_emphasis_high_type"
                app:iconTint="@color/material_on_background_emphasis_high_type"
                android:onClick="goOfertasLaborales"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
