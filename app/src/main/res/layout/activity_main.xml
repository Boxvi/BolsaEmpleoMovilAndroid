<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/btn_busco_empleo"
                    android:drawableLeft="@drawable/ic_baseline_manage_search_120"
                    android:text="@string/busco_empleo"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#000"
                     android:onClick="goLoginEmpleado"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:layout_height="150dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/btn_eres_admin"
                    android:drawableLeft="@drawable/ic_baseline_person_120"
                    android:text="@string/eres_admin"
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="#000"
                    android:textColor="@color/black" android:onClick="goLoginAdmin"/>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>